@model ShopManager.Areas.Admin.Models.DashboardData

@{
    ViewData["Title"] = "Bảng Điều Khiển";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tổng Khách Hàng</h5>
                    <p class="card-text">@Model.TotalCustomers</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tổng Sản Phẩm</h5>
                    <p class="card-text">@Model.TotalProducts</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tổng Doanh Thu</h5>
                    <p class="card-text">@Model.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tổng Đơn Hàng</h5>
                    <p class="card-text">@Model.TotalOrders</p>
                </div>
            </div>
        </div>
    </div>
</div>
