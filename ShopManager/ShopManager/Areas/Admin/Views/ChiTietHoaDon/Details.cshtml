@model ShopManager.Areas.Admin.Models.ChiTietHoaDon

@{
    ViewData["Title"] = "Chi tiết Sản Phẩm Hóa Đơn";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Sản phẩm ID: @Model.ProductId</h5>
        <p><strong>Payment ID:</strong> @Model.PaymentId</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
        <p><strong>Total Amount:</strong> @Model.Total.ToString("C")</p>
        <p><strong>Created At:</strong> @Model.CreateAt.ToString("dd/MM/yyyy")</p>

        <a href="@Url.Action("Index", "ChiTietHoaDon")" class="btn btn-primary">Back to List</a>
    </div>
</div>
