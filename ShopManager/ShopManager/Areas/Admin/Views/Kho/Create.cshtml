@model ShopManager.Areas.Admin.Models.Kho

<h2>Thêm kho mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Tên kho</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Location">Vị trí</label>
        <input type="text" asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Capacity">Sức chứa</label>
        <input type="number" asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CurrentStock">Tồn kho hiện tại</label>
        <input type="number" asp-for="CurrentStock" class="form-control" />
        <span asp-validation-for="CurrentStock" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm kho</button>
    <a href="@Url.Action("Index", "Kho")" class="btn btn-secondary">Hủy</a>
</form>
