@model ShopManager.Areas.Admin.Models.KhachHang

<h2>Edit Customer</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" asp-for="FirstName" />
    </div>
    <div>
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" asp-for="LastName" />
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" asp-for="Email" />
    </div>
    <div>
        <label for="Phone">Phone</label>
        <input type="text" id="Phone" asp-for="Phone" />
    </div>
    <div>
        <label for="Address">Address</label>
        <input type="text" id="Address" asp-for="Address" />
    </div>
    <div>
        <label for="IsActive">Active</label>
        <input type="checkbox" id="IsActive" asp-for="IsActive" />
    </div>

    <button type="submit">Update</button>
</form>

<a href="@Url.Action("Index", "KhachHang")">Back to List</a>
