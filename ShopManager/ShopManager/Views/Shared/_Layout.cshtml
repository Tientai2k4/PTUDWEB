<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShopManager.styles.css" asp-append-version="true" />
    <style>
        /* Định nghĩa màu xanh biển */
        :root {
            --primary-color: #007bff; /* Màu xanh biển */
            --primary-light: #007bff; /* Màu xanh biển nhạt (cùng màu xanh biển) */
            --primary-dark: #007bff; /* Màu xanh biển đậm (cùng màu xanh biển) */
        }

        /* Tùy chỉnh navbar */
        .navbar {
            background-color: var(--primary-color);
            border-bottom: 2px solid #ddd;
        }

        .navbar-brand {
            font-weight: bold;
            color: white !important;
        }

        .navbar-nav .nav-item .nav-link {
            font-size: 16px;
            padding: 10px 15px;
            color: white;
            transition: color 0.3s;
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: var(--primary-light);
                color: white;
            }

            .navbar-nav .nav-item .nav-link.active {
                background-color: var(--primary-dark);
                color: white;
            }

            /* Nút "Về cửa hàng" */
            .navbar-nav .nav-item .nav-link.btn-shop {
                background-color: var(--primary-color);
                color: white;
                padding: 10px 20px;
                border-radius: 8px;
                text-align: center;
                transition: background-color 0.3s, transform 0.3s ease-in-out;
                display: block;
                font-size: 16px;
            }

                .navbar-nav .nav-item .nav-link.btn-shop:hover {
                    background-color: var(--primary-dark);
                    transform: scale(1.05);
                }

                .navbar-nav .nav-item .nav-link.btn-shop:active {
                    background-color: var(--primary-dark);
                }

        /* Tùy chỉnh footer */
        .footer {
            background-color: var(--primary-light);
            color: white;
            padding: 20px 0;
        }

            .footer a {
                color: white;
            }

                .footer a:hover {
                    color: var(--primary-dark);
                }

        /* Tùy chỉnh container */
        .container {
            margin-top: 20px;
        }

        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/adminlogo.png" alt="SportShop Logo" style="height: 70px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="HoaDon" asp-action="Index">Hóa đơn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="ChiTietHoaDon" asp-action="Index">Chi tiết hóa đơn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Kho" asp-action="Index">Kho</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="CategoryAdmin" asp-action="Index">Danh mục sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="ProductAdmin" asp-action="Index">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="KhachHang" asp-action="Index">Khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Report" asp-action="Index">Báo cáo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-shop" href="/" role="button">Về cửa hàng</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ShopManager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
