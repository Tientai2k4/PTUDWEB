<div class="container-fluid py-2 mb-2 hero-header" style="background-image: url('img/background.jpg'); background-size: cover; background-position: center; width: 100%; height: auto; overflow: hidden;">
    <div class="container py-2">
        <div class="row g-5 align-items-center">
            <div class="col-md-12 col-lg-7">
                <h4 class="mb-3 text-secondary" style="font-weight: bold; font-size: 1rem; margin-top: 0; font-family: 'Courier New', Courier, monospace; color: #333;">SportShop - Sự Lựa Chọn Hàng Đầu Cho Dụng Cụ Thể Thao Chính Hãng</h4>
                <h1 class="mb-3 text-primary" style="font-weight: bold; font-size: 2.5rem; margin-top: 0; font-family: 'Arial Black', Gadget, sans-serif; color: #0a3d62; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);">
                    Khám Phá Bộ Sưu Tập Thể Thao Đỉnh Cao Tại SportShop
                </h1>

            </div>

            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <!-- Slide 1 -->
                        <div class="carousel-item active rounded">
                            <img src="img/best-sport-item-1.jpg" class="img-fluid bg-secondary rounded" alt="Slide 1" />
                        </div>
                        <!-- Slide 2 -->
                        <div class="carousel-item rounded">
                            <img src="img/best-sport-item-2.jpg" class="img-fluid rounded" alt="Slide 2" />
                        </div>
                        <!-- Slide 3 -->
                        <div class="carousel-item rounded">
                            <img src="img/best-sport-item-3.jpg" class="img-fluid rounded" alt="Slide 3" />
                        </div>
                        <!-- Slide 4 -->
                        <div class="carousel-item rounded">
                            <img src="img/best-sport-item-4.jpg" class="img-fluid rounded" alt="Slide 4" />
                        </div>
                    </div>
                    <!-- Previous Button -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <!-- Next Button -->
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS cho chiều cao cố định và căn chỉnh hình ảnh -->
